<Page x:Class="AirLineTicketOffice.View.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AirLineTicketOffice.View"
      mc:Ignorable="d"
      ShowsNavigationUI="False"
      Title="Registration" Height="350" Width="500">
    <Grid Background="Azure" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Foreground="Blue" HorizontalAlignment="Center" VerticalAlignment="Center">Регистрация</TextBlock>
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <TextBlock Foreground="Blue" HorizontalAlignment="Stretch">Логин</TextBlock>
            <TextBox></TextBox>
            <TextBlock Foreground="Blue">Пароль</TextBlock>
            <TextBox></TextBox>
            <TextBlock Foreground="Blue">Повторите пароль</TextBlock>
            <TextBox></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <StackPanel  Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
                <Button Width="Auto" Height="30">Registration</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>

<Window x:Class="AirLineTicketOffice.View.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirLineTicketOffice.View"
        mc:Ignorable="d"
        Title="Authorization" Height="450" Width="450">
    <Grid Background="Azure" ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
            <RowDefinition Height="0.5*"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Foreground="Blue" HorizontalAlignment="Center" VerticalAlignment="Center">Авторизация</TextBlock>
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <TextBlock Foreground="Blue" HorizontalAlignment="Stretch">Логин</TextBlock>
            <TextBox></TextBox>
            <TextBlock Foreground="Blue">Пароль</TextBlock>
            <TextBox></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <StackPanel  Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center">
                <Label>Есть аккаунт?</Label>
                <Button Width="50" Height="30">Sign In</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
